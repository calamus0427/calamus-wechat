<view class="change">
<view class="indexShow" hidden="{{showChange}}">
  <rich-text class="title">庆祝创维三十周岁</rich-text>
  <image bindtap="authUser" class="auth" src="http://p3i10hjs7.bkt.clouddn.com/user.jpg" alt="calamus" mode="widthFix"></image>
</view>
 <view class="changeImg" hidden="{{!showChange}}">
  <view class="preview-img">
    <image alr="coocaa" src="{{src}}" mode="widthFix"></image>
  </view>
  <view class="button-control">
    <button size="mini" class="calamus cl-zhaopian2" type="default" bindtap="chooseImg"> 选择图片</button>
    <button size="mini" class="calamus cl-xiazaidaoru" type="default" bindtap="downloadImg"> 下载图片</button>
    <button size="mini" type="default" class="calamus cl-jiantouxia" bindtap="chooseModel"> 选择模板 </button>
  </view>

  <block wx:if="{{showModel}}">
    <scroll-view scroll-y="true" style="height: 70px">
    <block wx:for="{{modelList}}" wx:key="index"> 
      <image bindtap="submitModel" data-id="{{item.id}}" style="background-image:url({{item.url}})" class="modelImg calamus {{currentModel==item.id?'active':''}}"  alt="calamus"></image>
    </block>
    </scroll-view>
    <view class="close-model" bindtap="chooseModel"> 
      <text class="calamus cl-jiantoushang"></text>      
    </view>
    
  </block>
</view> 
  

</view>