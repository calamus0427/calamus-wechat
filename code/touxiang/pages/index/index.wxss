page{
  background:url('http://p3i10hjs7.bkt.clouddn.com/bgn.png') no-repeat rgb(25,159,249);
  background-size:100% auto;
  boxing-sizing:border-box;
}
.loading{
  position:absolute;
  top:0;
  left:0;
  width:100%;
  height:100%;
  background:url('http://p3i10hjs7.bkt.clouddn.com/bgn.png') no-repeat rgb(25,159,249);
  background-size:100% auto;  
  z-index:11111;
}
/* 标题 */
.logo{
  margin-top:130rpx;
}
.logo image{
  width:80%;
}
/* 头像预览 */
.preview-img{
  margin-top:30rpx;
  width:180px; 
  height: 180px;
  border:5rpx white solid;
  border-radius:30rpx;
}
.preview-img image{ 
  border-radius:30rpx;  
  box-shadow:0 0 5rpx whitesmoke;
  width:100%;
  height:100%;
}
.preImg{
  display:flex;
  flex-direction:row;
  justify-content:center;
}
/* 模板 */
.chooseModel{
  margin:12rpx;
  color:white;
}
.modelTips{
  font-size:35rpx;
}
.tips{
  display:block;
  font-size:30rpx;
}
.model-view{
  width:100%;
  height:85px;
  white-space:nowrap;
}
.model-item{
  display:inline-block;
  margin:15rpx 0rpx 15rpx 30rpx;
}
.modelImg{
  border:2rpx white solid;
  border-radius:10rpx;
  width:60px;
  height:60px;
}
/* .active:before{
  content: "\e63e";
  color: blue ;
  font-size:20px;
}  */
.active{
  border:5rpx  red  solid;
  border-radius:5px;
  transform:scale(1.2,1.2);
}
/* 按钮 */
.button-control{
  display: flex;
  justify-content: center;
  margin-bottom:30rpx;
  margin-top:30rpx; 
  font-size:40rpx;
}

/* 透明度 */
.alpha-view{
  position: absolute;
  margin-top:30rpx;
  flex-direction:column;
  width:40px;
}
.alpha{
width:4px;height:150px;border-radius:9px;background-color:white;
}
.alpha-item{
border-radius:50%;border:2px solid white;height:18px; width: 18px;background-color:#dcdcdc;
}

/* 滚动条 */
.scroll-bar{
  margin:10px auto;width:160px;height:2px;border-radius:9px;background-color:white;
}
.scroll-bar-item{
  height:2px; width: 100px;background-color:rgb(193,27,124);
}
/* 底部图片 */
.footer{
  display: flex;
  justify-content: center;
}